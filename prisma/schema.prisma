generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // Vercel автоматически предоставит эту переменную
  directUrl = env("POSTGRES_URL_NON_POOLING") // Для прямого подключения
}

model TelegramUser {
  id            Int      @id @default(autoincrement())
  tgId          Int      @unique
  firstName     String?
  lastName      String?
  username      String?
  languageCode  String?
  firstVisit    DateTime @default(now())
  lastVisit     DateTime @default(now())
  visitCount    Int      @default(1)
} 